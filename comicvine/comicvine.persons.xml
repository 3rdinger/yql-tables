<?xml version="1.0"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
	<meta>
		<author>CaptPhunkosis</author>
		<description>YQL data table for comicvine comic db. Returns a list of persons.  Use offset to retrieve items further into the list.  See documentation for more information.</description>
		<documentationURL>http://api.comicvine.com/documentation/#person</documentationURL>
	</meta>
	<bindings>
		<select produces="XML" itemPath="response.results">
			<urls>
                <url>http://api.comicvine.com/persons/?format=xml</url>
			</urls>
            <paging model="offset">
                <start default="0" id="offset" />
                <pagesize max="100" />
                <total default="100" />
            </paging>
            <inputs>
                <key id="api_key" type="xs:string" paramType="query" required="true"/>
			</inputs>
		</select>
	</bindings>
</table>
