<?xml version="1.0"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
	<meta>
		<author>CaptPhunkosis</author>
		<description>YQL data table for comicvine comic db. Returns a list of powers.  Use offset to retrieve items further into the list.  See documentation for more information.</description>
		<documentationURL>http://api.comicvine.com/documentation/#power</documentationURL>
	</meta>
	<bindings>
		<select produces="XML" itemPath="response.results">
			<urls>
                <url>http://api.comicvine.com/powers/?format=xml</url>
			</urls>
			<inputs>
                <key id="api_key" type="xs:string" paramType="query" required="true"/>
				<key id="offset" type="xs:string" paramType="query" />
			</inputs>
		</select>
	</bindings>
</table>
