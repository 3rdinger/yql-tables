<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd" https="false">
<meta>
    <author>Daniel Pett</author>
    <description>Create a deep zooming image from the zoom.it service</description>
    <documentationURL>http://zoom.it/pages/api/</documentationURL>
    <sampleQuery description="Create deep zoom from the Ringlemere gold cup (PAS image)">select * from {table} where url="http://www.finds.org.uk/database/ajax/download/id/6085";</sampleQuery>
</meta>
<bindings>
    <select itemPath="" produces="JSON">
        <urls>
            <url>http://api.zoom.it/v1/content/?format={format}&url={url}</url>
        </urls>
      	<inputs>
            <key id="url" type="xs:string" paramType="path" required="true" />
	    <key id="format" type="xs:string" paramType="path" required="false" default="JSON"/>
	</inputs>
    </select>
</bindings>
</table>