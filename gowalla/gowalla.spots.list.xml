<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
   <meta>
      <author>Zach Graves (zachg@yahoo-inc.com)</author>
      <description>Gowalla API</description>
      <documentationURL>http://gowalla.com/api/explorer#/spots?lat=30.2697&amp;lng=-97.7494&amp;radius=50</documentationURL>
      <sampleQuery>select * from {table} where lat=37.416275 and lng=-122.025092 and radius=50 and api_key='fa574894bddc43aa96c556eb457b4009';</sampleQuery>
   </meta>
   <bindings>
      <select itemPath="" produces="JSON">
         <urls>
            <url>http://api.gowalla.com/spots</url>
         </urls>
         <inputs>
            <key id="lat" type="xs:integer" paramType="query" required="true"/>
            <key id="lng" type="xs:integer" paramType="query" required="true"/>
				<key id="radius" type="xs:integer" paramType="query" required="true"/>
            <key id="api_key" type="xs:string" paramType="variable" required="true"/>
         </inputs>
         <execute>
            <![CDATA[
response.object = request.header('X-Gowalla-API-Key', api_key).accept('application/json').get();
            ]]>
         </execute>
      </select>
   </bindings>
</table>