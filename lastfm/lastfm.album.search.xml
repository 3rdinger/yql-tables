<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
  <meta>
    <author>Jamie Matthews</author>
    <description>Last.fm album.search API</description>
    <documentationURL>http://www.last.fm/api/show?service=357</documentationURL>
    <sampleQuery>SELECT * FROM {table} WHERE album='Kind Of Blue' AND api_key='INSERT_API_KEY'</sampleQuery>
  </meta>
  <bindings>
    <select itemPath="" produces="XML">
      <urls>
        <url>http://ws.audioscrobbler.com/2.0/?method=album.search</url>
      </urls>
      <inputs>
        <key id="api_key" type="xs:string" paramType="query" required="true" />
        <key id="album" type="xs:string" paramType="query" required="true" />
        <key id="page" type="xs:string" paramType="query" required="false" /> 
        <key id="limit" type="xs:string" paramType="query" required="false" /> 
      </inputs>
    </select>
  </bindings>
</table>
