<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
    <meta>
			<author>Sebastian Spier (http://twitter.com/#!/sebastianspier/)</author>
			<description>NOTE: No official API call!!! Wrapper for the json data of the public user timeline.</description>
			<documentationURL></documentationURL>
	    <sampleQuery>SELECT * FROM {table} WHERE login='yourlogingoeshere'</sampleQuery>
    </meta>
    <bindings>
        <select itemPath="json" produces="JSON">
            <urls>
                <url>http://bit.ly/u/{login}.json"</url>
            </urls>
            <inputs>
                <key id="login" type="xs:string" paramType="path" required="true" />
            </inputs>
        </select>
     </bindings>
</table>



