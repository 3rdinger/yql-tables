<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
    <meta>
			<author>Sebastian Spier (http://twitter.com/#!/sebastianspier/)</author>
			<description>API lets you query "feelings" as collected by www.wefeelfine.org</description>
			<documentationURL>http://www.wefeelfine.org/api.html</documentationURL>
	    <sampleQuery>SELECT * FROM {table} WHERE login='yourlogingoeshere'</sampleQuery>
    </meta>
    <bindings>
        <select itemPath="feelings.feeling" produces="XML">
            <urls>
                <url> http://api.wefeelfine.org:8080/ShowFeelings</url>
            </urls>
            <inputs>
                <key id="returnfields" type="xs:string" paramType="query" required="true" default="sentence"/>
								<key id="limit" type="xs:string" paramType="query" default="10" />
            </inputs>
        </select>
     </bindings>
</table>



